		        android:text="@string/todos"
		        android:textColor="@color/row_item_font_color"
		        android:duplicateParentState="true" />		    
		</RelativeLayout>
		<ImageButton 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/line_grey"/>
		<!-- Custom Row Surface -->
