		        android:textColor="@color/row_label_font_color"
		        android:paddingLeft="10dp"
		        android:layout_centerVertical="true"
		        android:duplicateParentState="true"/>
		    <ImageView 
		        android:id="@+id/flecha_publish_date"
		        android:src="@drawable/opciones_flecha_sel"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:paddingRight="5dp"
		        android:duplicateParentState="true"
		    />

		    <TextView
		        android:id="@+id/publish_date_selected"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/flecha_publish_date"
		        android:layout_marginRight="16dp"
		        android:layout_toLeftOf="@+id/flecha_publish_date"
		        android:text="@string/nofilter"
		        android:textColor="@color/row_item_font_color"
		        android:duplicateParentState="true" />		    
		</RelativeLayout>
		<ImageButton 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/line_grey"/>
