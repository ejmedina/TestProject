<RelativeLayout  
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
		android:background="@color/white"
	    android:id="@+id/activity_filter"
	    tools:context=".FilterActivity" >
	        
	    <!-- Custom Row Prices -->    
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/row_color"
		    android:onClick="pricesClick">
		    <Spinner
			    android:id="@+id/price_spinner"
			    android:layout_width="0dp"
			    android:layout_height="0dp"
			    android:background="@drawable/home_btn_select"
			    android:visibility="visible" />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/price"
		        android:textColor="@color/row_label_font_color"
		        android:paddingLeft="10dp"
		        android:layout_centerVertical="true"
		        android:duplicateParentState="true"/>
		    <ImageView 
		        android:id="@+id/flecha_price"
		        android:src="@drawable/opciones_flecha_sel"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:paddingRight="5dp"
		        android:duplicateParentState="true"
		    />

		    <TextView
		        android:id="@+id/price_selected"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/flecha_price"
		        android:layout_marginRight="16dp"
		        android:layout_toLeftOf="@+id/flecha_price"
		        android:text="@string/todos"
		        android:textColor="@color/row_item_font_color"
		        android:duplicateParentState="true" />		    
		</RelativeLayout>
		<ImageButton 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/line_grey"/>
		<!-- Custom Row Prices -->
		<!-- Custom Row Property -->    
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/row_color"
		    android:onClick="propertyClick">
		    <Spinner
			    android:id="@+id/property_spinner"
			    android:layout_width="0dp"
			    android:layout_height="0dp"
			    android:background="@drawable/home_btn_select"
			    android:contentDescription="@string/property_type"
			    android:visibility="visible" />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/property"
		        android:textColor="@color/row_label_font_color"
		        android:paddingLeft="10dp"
		        android:layout_centerVertical="true"
		        android:duplicateParentState="true"/>
		    <ImageView 
		        android:id="@+id/flecha_property"
		        android:src="@drawable/opciones_flecha_sel"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:paddingRight="5dp"
		        android:duplicateParentState="true"
		    />

		    <TextView
		        android:id="@+id/property_selected"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/flecha_property"
		        android:layout_marginRight="16dp"
		        android:layout_toLeftOf="@+id/flecha_property"
		        android:text="@string/todos"
		        android:textColor="@color/row_item_font_color"
		        android:duplicateParentState="true" />		    
		</RelativeLayout>
		<ImageButton 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/line_grey"/>
		<!-- Custom Row Property -->
		<!-- Custom Row Rooms -->    
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/row_color"
		 >
		    <TextView 
		        android:id="@+id/rooms_label"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/rooms"
		        android:textColor="@color/black"
		        android:paddingLeft="10dp"
		        android:layout_centerVertical="true"
			/>
		    <TextView 
		        android:id="@+id/rooms_text"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:paddingRight="5dp"
		        android:text=""
		    />
		    <SeekBar
		        android:paddingLeft="6dp"
		        android:paddingRight="6dp"
		        android:thumbOffset="8dp"
		        android:id="@+id/rooms_seek_bar"
		        android:layout_width="120dp"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="40dp"
		        android:progressDrawable="@drawable/seekbar_progress"
		        android:layout_toRightOf="@+id/rooms_label"
		        android:textColor="@color/row_item_font_color"
        		android:thumb="@drawable/opciones_btn_ambientes" />
		    
		</RelativeLayout>
		<ImageButton 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="@color/line_grey"/>
		<!-- Custom Row Rooms -->
		<!-- Custom Row Surface -->    
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:background="@drawable/row_color"
