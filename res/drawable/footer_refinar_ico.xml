    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/footer_icono_filtrar_pressed" />
    <!-- pressed -->
    <item android:state_pressed="true" android:drawable="@drawable/footer_icono_filtrar_pressed" />
    <!-- default -->
    <item android:drawable="@drawable/footer_icono_filtrar" />

</selector>