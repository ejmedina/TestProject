<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- focused -->
    <item android:state_focused="true" android:background="@drawable/footer_icono_pressed" />
    <!-- focused and pressed-->
    <item android:state_focused="true" android:state_pressed="true" android:background="@drawable/footer_icono_pressed" />
    <!-- pressed -->
    <item android:state_pressed="true" android:background="@drawable/footer_icono_pressed" />
    <!-- default -->
    <item android:background="@drawable/footer_icono_pressed" />

</selector>